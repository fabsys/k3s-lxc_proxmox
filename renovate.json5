{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "enabledManagers": ["kubernetes", "dockerfile", "regex"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "description": "On auto-merge TOUT ce qui est mineur ou patch (v1.0.0 -> v1.0.1)",
      "matchPackagePatterns": ["*"], 
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true
    },
    {
      "description": "On bloque TOUT ce qui est majeur (v1 -> v2) pour validation manuelle",
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true
    },
    {
      "description": "Aide Renovate Ã  lire les tags bizarres de LinuxServer",
      "matchPackagePatterns": ["^lscr\\.io/"],
      "versioning": "docker"
    }
  ]
}